<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bbgkh.dao.IMemberDao" >

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.bbgkh.model.DTO.MemberInfoDTO" >
        INSERT INTO members (name,mobilePhone,customerUid)
        VALUES (#{name}, #{mobilePhone},#{customerUid})
    </insert>

    <select id="selectAll" resultType="com.bbgkh.model.PO.SaleInfoPO">
        SELECT * from sale where TO_DAYS(saleTime) = TO_DAYS(NOW()) and uid=#{uid};
    </select>

    <select id="selectById" parameterType="String" resultType="com.bbgkh.model.PO.SaleInfoPO">
        SELECT * from members where TO_DAYS(saleTime) = TO_DAYS(NOW()) and uid=#{uid};
    </select>

    <insert id="addToMemberSale">
        INSERT INTO member_sale (memId , saleId)
        VALUES (#{memId},#{saleId})
    </insert>

    <update id="update" parameterType="com.bbgkh.model.PO.SaleInfoPO" >
        UPDATE sale SET productSysNo=#{productSysNo},salePrice=#{salePrice},saleNum=#{saleNum},sex=#{sex},color=#{color},
        size=#{size} WHERE id =#{id} AND uid=#{uid}
    </update>

    <select id="selectByMobileOrCard" parameterType="com.bbgkh.model.PO.MemberInfoPO" resultType="com.bbgkh.model.PO.MemberInfoPO">
        SELECT id FROM members WHERE customerUid=#{customerUid}
        <if test="mobilePhone != null and mobilePhone!= '' ">
        AND mobilePhone = #{mobilePhone}
        </if>
        <if test="cardId != null and cardId!= '' ">
        AND cardId = #{cardId}
        </if>
        <if test="name != null and name!= '' ">
        AND name = #{name}
        </if>
    </select>

</mapper>
